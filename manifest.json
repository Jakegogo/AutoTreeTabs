{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.0.0",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "author": "Jake",
  "homepage_url": "https://github.com/Jakegogo/AutoTreeTabs",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "windows",
    "sessions",
    "management",
    "bookmarks"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Tree Tabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["img/*", "icons/*", "*.png", "*.svg", "*.ico", "i18n.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
